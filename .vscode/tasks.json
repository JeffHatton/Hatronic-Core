{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build Project",
        "command": "cmake --build .",
        "options": {
            "cwd": "${workspaceFolder}/build"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": {
            "base": "$gcc", 
        }
      },      
      {
        "type": "shell",
        "label": "Clean Project",
        "command": "cmake --build --clean-first ..",
        "options": {
            "cwd": "${workspaceFolder}/build"
        },
        "group": "build",
        "problemMatcher": {
            "base": "$gcc", 
        }
      },
      {
        "type": "shell",
        "label": "Cmake init",
        "command": "cmake .. -GNinja",
        "options": {
            "cwd": "${workspaceFolder}/build"
        },
        "group": "build",
        "problemMatcher": {
            "base": "$gcc", 
        }
      },
      {
        "type": "shell",
        "label": "Test",
        "command": "ceedling test:all",
        "options": {
            "cwd": "${workspaceFolder}/test"
        },
        "group": {
            "kind": "test",
            "isDefault": true
        },
        "problemMatcher": {
            "base": "$gcc", 
        }
      },         
      // {
      //   "type": "shell",
